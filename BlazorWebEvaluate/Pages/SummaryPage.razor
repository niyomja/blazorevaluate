                        <th>ผลการประเมิน</th>
                    </tr>
                </thead>
                @if(evaluateList !=null){
                <tbody>
                    @foreach (var eval in evaluateList)
                    {
                    <tr>
                        <td class="text-center">@(index + 1).</td>
                        <td>@(eval.full_name)</td>
                        <td class="text-center">@(eval.top_level)</td>
                        <td class="text-center">@(eval.Max())</td>
                        
                        <td class="text-center">@(eval.businessAcu_Scroll())</td>
                        <td class="text-center">@(eval.businessAcu_Scroll() - eval.Max())</td>
                        
                        <td class="text-center">@(eval.initiative_Scroll())</td>
                        <td class="text-center"> @(eval.initiative_Scroll() - eval.Max()) </td>

                        <td class="text-center"> @(eval.collaboration_Scroll()) </td>
                        <td class="text-center"> @(eval.collaboration_Scroll() - eval.Max()) </td>

                        <td class="text-center"> @(eval.serviceExcellence_Scroll()) </td>
                        <td class="text-center"> @(eval.serviceExcellence_Scroll() - eval.Max()) </td>

                        <td class="text-center"> @(eval.safetyAndSecurity_Scroll()) </td>
                        <td class="text-center"> @(eval.safetyAndSecurity_Scroll() - eval.Max()) </td>

                        <td class="text-center"> @(eval.digitalLiteracy_Scroll()) </td>
                        <td class="text-center"> @(eval.digitalLiteracy_Scroll() -  eval.Max()) </td>
                    </tr>
                    }
                </tbody>
                }
            </table>
        </div>

        <button @onclick="gotoBack" type="button" class="btn btn-success mt-5">&nbsp;&nbsp;Home&nbsp;&nbsp;</button>
    </div>
</div>

