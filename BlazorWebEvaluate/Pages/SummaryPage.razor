@page "/Summary"
@inject NavigationManager NavigationManager
@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
@inject HttpClient Http

<h3>Summary</h3>

<div class="row">
    <div class="col-lg-12">
        <h4 class="mt-5 mb-2">ตารางสรุปผลการประเมิน</h4>
        @if(assessor != null && !String.IsNullOrEmpty(assessor.full_name)){
            <span class="mt-2 mb-2">ผู้ประเมิน @(assessor.full_name)</span>
        }
        <div class="table-responsive">
            <table class="table table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th colspan="4"><img src="img/logo.png" /></th>
                        <th colspan="2" class="text-center">เชี่ยวชาญธุรกิจ (Business Acumen)</th>
                        <th colspan="2" class="text-center">คิดสร้างสรรค์ (Initiative)</th>
                        <th colspan="2" class="text-center">ประสานสัมพันธ์ (Collaboration)</th>
                        <th colspan="2" class="text-center">มุ่งมั่นบริการ (Service Excellence)</th>
                        <th colspan="2" class="text-center">มั่นคงปลอดภัย (Safety and Security)</th>
                        <th colspan="2" class="text-center">ประยุกต์ใช้ดิจิทัล (Digital Literacy)</th>
                    </tr>
                    <tr>
                        <th>No.</th>
                        <th>ชื่อ สกุล</th>
                        <th>Level</th>
                        <th>ค่าคาดหวัง</th>
                        <th>คะแนนประเมิน</th>
                        <th>ผลการประเมิน</th>
                        <th>คะแนนประเมิน</th>
                        <th>ผลการประเมิน</th>
                        <th>คะแนนประเมิน</th>
                        <th>ผลการประเมิน</th>
                        <th>คะแนนประเมิน</th>
                        <th>ผลการประเมิน</th>
                        <th>คะแนนประเมิน</th>
                        <th>ผลการประเมิน</th>
                        <th>คะแนนประเมิน</th>
                        <th>ผลการประเมิน</th>
                    </tr>
                </thead>
            @if(evaluateList !=null){
                <tbody>
                @if(evaluateList.Count() > 0){
                    @for (int i=0;i<evaluateList.Count();i++)
                    {
                    <tr>
                        <td class="text-center">@(1 + i).</td>
                        <td>@(evaluateList[i].full_name)</td>
                        <td class="text-center">@(evaluateList[i].top_level)</td>
                        <td class="text-center">@(evaluateList[i].Max())</td>
                        
                        <td class="text-center">@(evaluateList[i].businessAcu_Scroll())</td>
                        <td class="text-center">@((evaluateList[i].businessAcu_Scroll() - evaluateList[i].Max()))</td>
                        
                        <td class="text-center">@(evaluateList[i].initiative_Scroll())</td>
                        <td class="text-center"> @((evaluateList[i].initiative_Scroll() - evaluateList[i].Max())) </td>

                        <td class="text-center"> @(evaluateList[i].collaboration_Scroll()) </td>
                        <td class="text-center"> @((evaluateList[i].collaboration_Scroll() - evaluateList[i].Max())) </td>

                        <td class="text-center"> @(evaluateList[i].serviceExcellence_Scroll()) </td>
                        <td class="text-center"> @((evaluateList[i].serviceExcellence_Scroll() - evaluateList[i].Max())) </td>

                        <td class="text-center"> @(evaluateList[i].safetyAndSecurity_Scroll()) </td>
                        <td class="text-center"> @((evaluateList[i].safetyAndSecurity_Scroll() - evaluateList[i].Max())) </td>

                        <td class="text-center"> @(evaluateList[i].digitalLiteracy_Scroll()) </td>
                        <td class="text-center"> @((evaluateList[i].digitalLiteracy_Scroll() -  evaluateList[i].Max())) </td>
                    </tr>
                    }
                }else{
                    <tr>
                        <td colspan="16" class="text-center">
                            <span class="text-mute">No data to display.</span>
                        </td>
                    </tr>
                }
                </tbody>
            }else{
                    <tbody>
                        <tr>
                            <td colspan="16" class="text-center">
                                <div class="spinner-border m-5 text-center" role="status">
                                    <span class="sr-only">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
            }
            </table>
        </div>

        <button @onclick="gotoBack" type="button" class="btn btn-success mt-5">&nbsp;&nbsp;Home&nbsp;&nbsp;</button>
    </div>
</div>

