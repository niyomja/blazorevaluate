@inherits LayoutComponentBase

<h3>Personal Information.</h3>

<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <label for="fullname">Name - Surename</label>
            <input @bind="personal.full_name" type="text" class="form-control" id="fullname" placeholder="Enter you name and surename" required>
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <select @bind="personal.level" class="form-control" id="level" required>
                <option> --- Choose --- </option>
            </select>
        </div>
        <button type="button" class="btn btn-primary">&nbsp;&nbsp;Next&nbsp;&nbsp;</button>
    </div>
</div>

@code {      
    public Personal personal;

    protected override async Task OnInitializedAsync()
    {
        personal = new Personal();
    }

    public class Personal {
        public string full_name { get; set; }
        public string level { get; set; }
    }
}
